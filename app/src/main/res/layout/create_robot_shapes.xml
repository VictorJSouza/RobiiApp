<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/background_login"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/black_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/phases_create_shape_black_triangle"
            app:layout_constraintStart_toEndOf="@+id/white_star"
            app:layout_constraintTop_toTopOf="@+id/white_star" />

        <ImageView
            android:id="@+id/white_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/phases_create_shape_circle"
            app:layout_constraintBottom_toBottomOf="@+id/white_star"
            app:layout_constraintEnd_toStartOf="@+id/white_star" />

        <ImageView
            android:id="@+id/white_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/phases_create_shape_white_triangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/white_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="4dp"
            android:src="@drawable/phases_create_shape_star"
            app:layout_constraintBottom_toTopOf="@+id/white_circle2"
            app:layout_constraintEnd_toEndOf="@+id/black_square"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toEndOf="@+id/black_square" />

        <ImageView
            android:id="@+id/white_circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/phases_create_shape_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.736"
            app:layout_constraintStart_toEndOf="@+id/black_square" />

        <ImageView
            android:id="@+id/black_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/phases_create_shape_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/white_triangle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>