<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06091A"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:src="@drawable/logo_marca_robii_ofc"/>


    <ImageView
        android:id="@+id/rectangleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:src="@drawable/rectangle_login" />

    <TextView
        android:id="@+id/textViewLogin"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="login"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:fontFamily="@font/montserrat_bold"
        app:textAllCaps="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLogin"
        android:hint="@string/prompt_username"
        android:background="@drawable/custom_input"
        android:padding="8dp"
        android:gravity="center"
        app:fontFamily="@font/montserrat"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:id="@+id/editText_login_username"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_login_username"
        android:hint="@string/prompt_password"
        android:background="@drawable/custom_input"
        android:padding="8dp"
        android:gravity="center"
        app:fontFamily="@font/montserrat"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/editText_login_password"/>


    <TextView
        android:id="@+id/textView_login_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_login_password"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="@string/prompt_forgotpassword"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fontFamily="@font/montserrat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_login"
        android:layout_below="@+id/textView_login_forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Login"
        app:fontFamily="@font/montserrat"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView_hyperlink_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        app:fontFamily="@font/montserrat"
        android:textSize="16sp" />
</RelativeLayout>